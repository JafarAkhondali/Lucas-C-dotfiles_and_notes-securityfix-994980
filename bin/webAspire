#!/bin/bash

if [ -z $1 ]
then
	echo 'SYNTAXE : aspire site profondeur [extension(s)]'
else
	wget -r --no-parent --convert-links -l $2 -A "$3" "$1"
fi

#-k permet consultation en local
#-c reprend un téléchargement interrompu (fonctionne sur fichiers .part renommés avec bonne extension)
#-p si cible est un fichier, télécharge également tout le nécessaire pour l'affichage optimal

